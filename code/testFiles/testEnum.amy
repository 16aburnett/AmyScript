// Color enum 

enum Color { 
    red, 
    green, 
    blue 
}

char[][] colorStrings = [
    "red", 
    "green", 
    "blue"
];

function void print (Color c)
{
    // subscript operator needs to make sure offset is an int or enum 
    print (colorStrings[c]);
}

function void println (Color c)
{
    // subscript operator needs to make sure offset is an int or enum 
    println (colorStrings[c]);
}

