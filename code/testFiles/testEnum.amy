// Type enum 

enum Type  { 
    INT, 
    FLOAT, 
    CHAR 
}

char[][] typeStrings = [
    "INT", 
    "FLOAT", 
    "CHAR"
];

function void print (Type c)
{
    // subscript operator needs to make sure offset is an int or enum 
    print (typeStrings[c]);
}

function void println (Type c)
{
    // subscript operator needs to make sure offset is an int or enum 
    println (typeStrings[c]);
}

