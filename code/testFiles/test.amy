function char[] intToString (int num)
{

    if (num == 0)
        return "0";

    int isNegative = 0;
    if (num < 0)
    {
        isNegative = 1;
        num = -num;
    }

    char[] digits = "0123456789";

    // count digits 
    int nDigits = 0;
    int temp = num;
    while (temp > 0)
    {
        nDigits++; 
        temp = temp / 10;
    }

    char[] result = new char[nDigits + isNegative];
    char[] reversed = new char[nDigits + isNegative];

    int i = 0;
    while (num > 0)
    {
        result[i] = digits[num % 10];
        i++; 
        num = num / 10;
    }

    if (isNegative)
        result[nDigits] = '-';

    // reverse number
    for (i = 0; i < sizeof (result); ++i)
        reversed[i] = result[sizeof (result) - 1 - i];
    
    return reversed; 

}

