function int stringToInt (char[] str)
{
    int val = 0;
    int isNegative = 0;
    int i = 0;

    // skip over any leading whitespace
    for (i ; i < sizeof (str); ++i)
    {
        if (str[i] != ' ')
        {
            break; 
        }
    }

    // test if negative 
    if (str[i] == '-') 
    {
        isNegative = 1; 
        i++;
    }

    char[] digits = "0123456789";

    for (i ; i < sizeof (str); ++i)
    {
        for (int j = 0; j < sizeof (digits); ++j)
        {
            // stop parsing if whitespace is reached 
            if (str[i] == ' ')
            {
                i = sizeof (str);
                break; 
            }
            if (str[i] == digits[j])
            {
                val = val * 10 + j;
                break;
            }
        }
        else
        {
            println ("Cannot Parse integer");
            exit(); // close the program 
        }
    }

    if (isNegative)
        return -val; 
    return val; 
}

