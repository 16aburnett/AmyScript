    template <:T:>
    function T sum (T[] vals)
    {
        T sum = T();
        for (int i = 0; i < sizeof(vals); ++i)
            sum = sum + vals[i]; 
        return sum; 
    }

    template <:T:>
    function T min (T a, T b)
    {
        if (a <= b) return a;
        return b; 
    }

    function void print (int[] array)
    {
        print ('[');
        if (sizeof (array) > 0)
            print (array[0]);
        for (int i = 1; i < sizeof (array); ++i)
        {
            print (',');
            print (' ');
            print (array[i]);
        }
        print (']');
    }

    function void println (int[] array)
    {
        print (array);
        println ();
    }

