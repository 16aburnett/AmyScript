#ifndef STDLIB
    #define STDLIB

    #include "max.amy"

    template <:T:>
    function T sum (T[] vals)
    {
        T sum = T();
        for (int i = 0; i < sizeof(vals); ++i)
            sum = sum + vals[i]; 
        return sum; 
    }

    template <:T:>
    function T min (T a, T b)
    {
        if (a <= b) return a;
        return b; 
    }

#endif

